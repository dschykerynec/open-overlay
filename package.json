{
  "name": "open-overlay",
  "version": "0.0.14",
  "description": "An Electron application with Vue and TypeScript",
  "main": "./dist/main/index.js",
  "author": "David Schykerynec",
  "homepage": "https://github.com/dschykerynec/open-overlay",
  "repository": {
    "type": "git",
    "url": "https://github.com/dschykerynec/open-overlay"
  },
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts,.vue --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "vue-tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "set NODE_ENV=development && electron-vite preview --outDir=dist",
    "dev": "set NODE_ENV=development && electron-vite dev --outDir=dist",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "package": "set NODE_ENV=production && electron-vite build --outDir=dist && electron-forge package",
    "make": "set NODE_ENV=production && electron-vite build --outDir=dist && electron-forge make",
    "publish": "set NODE_ENV=production && electron-vite build --outDir=dist && electron-forge publish"
  },
  "dependencies": {
    "@electron-forge/cli": "^6.2.1",
    "@electron-forge/maker-deb": "^6.2.1",
    "@electron-forge/maker-rpm": "^6.2.1",
    "@electron-forge/maker-squirrel": "^6.2.1",
    "@electron-forge/maker-zip": "^6.2.1",
    "@electron-toolkit/preload": "^3.0.0",
    "@electron-toolkit/utils": "^3.0.0",
    "chart.js": "^4.4.7",
    "dotenv": "^16.4.7",
    "electron-log": "^5.3.0",
    "electron-updater": "^6.1.7",
    "update-electron-app": "^3.1.1",
    "vue-chartjs": "^5.3.2",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@electron-forge/publisher-github": "^7.6.1",
    "@electron-toolkit/eslint-config": "^1.0.2",
    "@electron-toolkit/eslint-config-ts": "^2.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@rushstack/eslint-patch": "^1.10.3",
    "@types/node": "^20.14.8",
    "@vitejs/plugin-vue": "^5.0.5",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3",
    "electron-vite": "^2.3.0",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.26.0",
    "prettier": "^3.3.2",
    "typescript": "^5.5.2",
    "vite": "^5.3.1",
    "vue": "^3.4.30",
    "vue-tsc": "^2.0.22"
  }
}
